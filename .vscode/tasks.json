  "version": "2.0.0",
  "tasks": [
    {
      "label": "clear",
      "type": "shell",
      "windows": {
        "command": "Remove-Item ${workspaceFolder}\\build\\* -recurse "
      },
      "group": "build"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "tsc",
      "dependsOn": ["clear"]
    }
  ]
}
