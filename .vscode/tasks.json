{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clear",
      "type": "shell",
      "windows": {
        "command": "if(Test-Path ${workspaceFolder}\\build){Remove-Item ${workspaceFolder}\\build\\* -recurse}"
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "tsc",
      "dependsOn": [
        "clear"
      ]
    }
  ]
}
